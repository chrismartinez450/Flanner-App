<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211D44">


    <ImageView
        android:id="@+id/bgCircle"
        android:layout_width="276dp"
        android:layout_height="247dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bgcircle" />

    <ImageView
        android:id="@+id/icAnchor"
        android:layout_width="300dp"
        android:layout_height="352dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icanchor" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Chronometer
            android:id="@+id/chrono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:textSize="62sp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="#11B600"
            android:text="Start"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:background="#CF0000"
            android:text="Finished"
            android:textColor="#470214"
            />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:background="#01B4CC"
            android:text="Pause"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/btnResume"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:background="#01B4CC"
            android:text="Resume"
            android:textColor="#000000"
             />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

