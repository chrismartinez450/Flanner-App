<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".EditProfile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_layout">
        <TextView
            android:id="@+id/edit_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/username_edit"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:layout_below="@id/edit_profile_title"
            android:hint="Username"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/fullname_edit"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:layout_below="@id/username_edit"
            android:hint="Full Name"
            android:textColor="@color/white"
            android:textColorHint="#ffffff"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/age_edit"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:layout_below="@id/fullname_edit"
            android:hint="Age"
            android:textColor="@color/white"
            android:textColorHint="#ffffff"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_edit"
            android:backgroundTint="#535277"
            android:text="Save"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/edit_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/save_button"
            android:text="Change Email"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:layout_below="@id/edit_email_title"
            android:hint="Email"
            android:textColor="@color/white"
            android:textColorHint="#ffffff"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/change_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_edit"
            android:backgroundTint="#535277"
            android:text="Change Email"
            android:textColor="@color/white"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>